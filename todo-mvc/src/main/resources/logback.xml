<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<logger name="com.orange" level="debug">
	</logger>
	
	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
 

  
  